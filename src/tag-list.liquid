---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
  addAllPagesToCollections: true
layout: page.liquid
eleventyComputed:
  title: >
    All posts tagged '{{ tag | replace: "-", " " }}'
permalink: /tags/{{ tag | slugify }}/
---
{% assign posts = collections[tag] %}

<ul>
  {% for post in posts reversed %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      (<time datetime="{{ page.date | isoDate }}"> {{ post.date | readableDate }}</time>)
    </li>
  {% endfor %}
</ul>

<p>See a list of <a href="/tags/">all tags</a>.</p>
